@page
@model CrimesTop10Model
@{
  ViewData["Title"] = "Top-10 Crimes";
}

<h2>Top-10 Crimes</h2>  

@{
   if (@Model.EX != null)
	 {
	   <br />
		 <br />
		 <h3>**ERROR: @Model.EX.Message</h3>
		 <br />
		 <hr />
		 <br />
		 <br />
	 }
}

<table class="table">  
    <thead>  
        <tr>  
            <th>  
                Rank
            </th>  
            <th>  
                CrimeCode  
            </th>  
            <th>  
                Description
            </th>  
            <th>    
                Occurence
            </th>  
            <th>  
                PercentageTotal
            </th>  
            <th>
                PercentageArrested
        </tr>  
    </thead>  
    <tbody>  
				@{
				   int rank = 1;
				 }
				
        @foreach (var item in Model.CrimesList)  
        {  
            <tr>  
                <td>  
										@rank
                </td>  
                <td>  
                    @item.CrimeCode
                </td>  
                <td>  
                    @item.Description
                </td>  
                <td>  
                    @item.Occurence
                </td>  
                <td>  
                    @item.PercentageTotal
                </td>  
                <td>  
                    @item.PercentageArrested
                </td>  
            </tr>  
						
						rank++;
        }  
    </tbody>  
</table> 